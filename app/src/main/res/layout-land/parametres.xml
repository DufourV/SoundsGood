<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Parametres"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/parametres"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="25dp">

    </TextView>

    <TableLayout style="@style/frag1TableLayout" >
        <TableRow style="@style/frag1HeaderTableRow">
            <TextView style="@style/frag1HeaderCol" android:text="@string/track"/>
            <TextView style="@style/frag1HeaderCol" android:text="@string/instrument"/>
            <TextView style="@style/frag1HeaderCol" android:text="@string/bpm"/>
        </TableRow>

        <TableRow style="@style/frag1TableRow">
            <TextView style="@style/frag1Col" android:text="@string/_1"/>
            <RadioButton style="@style/frag1Col" android:text="@string/piano" android:checked="true"/>
            <EditText style="@style/frag1Col" android:text="120"/>
        </TableRow>

        <TableRow style="@style/frag1TableRow">
            <TextView style="@style/frag1Col" android:text="@string/_2"/>
            <RadioButton style="@style/frag1Col" android:text="@string/guitare"/>
        </TableRow>

        <TableRow style="@style/frag1TableRow">
            <TextView style="@style/frag1Col" android:text="@string/_3"/>
            <RadioButton style="@style/frag1Col" android:text="Claves"/>
        </TableRow>
    </TableLayout>


</LinearLayout>